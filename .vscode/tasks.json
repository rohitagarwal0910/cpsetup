{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run .e",
            "type": "shell",
            "command": "./main.e",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clear main.cpp",
            "type": "shell",
            "command": "rm -f main.cpp && rm -f main.e && rm -f main && rm -rf tests && cp templates/cc_template.cpp main.cpp",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
    ]
}